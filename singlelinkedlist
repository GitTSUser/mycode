
#include <stdio.h>
#include <stdlib.h>
struct Node
{
    int data;
   struct Node* next;
}*head=NULL;
Node createlist(int n)
{
     for(int i=0;i<n;i++)
    {
    struct Node *temp,*p;
    temp=(struct Node *)malloc(sizeof(struct Node));
     scanf("%d",&temp->data);
    temp->next=NULL;
    if(head==NULL){
    head=temp;
    p=temp;
    }
    else{
    p->next=temp;
    p=temp;
    }
    } 
    return head;
}
void display()
{
    struct Node *temp;
    if(head==NULL)
    printf("List is empty");
    else{
    temp=head;
    while(temp!=NULL)
    {
        printf("%d-->",temp->data);
        temp=temp->next;
    }
}
}
